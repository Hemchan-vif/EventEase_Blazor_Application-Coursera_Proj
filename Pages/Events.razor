@page "/events"
@using EventEase.Models

<h2>Events</h2>

@foreach (var evt in Events)
{
    <EventCard Event="evt" />
}

<p><strong>Total Registered:</strong> @RegisteredCount</p>

@code {
    List<EventModel> Events = new()
    {
        new EventModel { Title = "Tech Conference", Location = "Online", Date = DateTime.Now },
        new EventModel { Title = "Workshop", Location = "Campus", Date = DateTime.Now.AddDays(5) }
    };

    int RegisteredCount => Events.Count(e => e.IsRegistered);
}
